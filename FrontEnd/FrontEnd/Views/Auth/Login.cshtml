@{
    ViewData["Title"] = "Login";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

<div style="display: flex; justify-content: center; align-items: center; height: 60vh; background: url('/images/fondo-login.jpg') no-repeat center center fixed; background-size: cover;">
    <div style="max-width: 450px; width: 100%; padding: 20px; background: rgba(255, 255, 255, 0.9); border-radius: 10px; box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);">
        <h2 style="text-align: center; color: #333; margin-bottom: 20px;">Inicio de Sesión</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger" style="margin-bottom: 10px;"></div>

            <div class="form-group" style="margin-bottom: 15px; position: relative;">
                <label for="username" style="font-weight: bold; color: #555;">Usuario</label>
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-user" style="position: absolute; left: 10px; color: #007bff;"></i>
                    <input type="text" id="username" name="username" class="form-control" style="padding: 10px 10px 10px 35px; border: 1px solid #ccc; border-radius: 5px;" placeholder="Ingresa tu usuario" />
                </div>
            </div>

            <div class="form-group" style="margin-bottom: 20px; position: relative;">
                <label for="password" style="font-weight: bold; color: #555;">Contraseña</label>
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-lock" style="position: absolute; left: 10px; color: #007bff;"></i>
                    <input type="password" id="password" name="password" class="form-control" style="padding: 10px 10px 10px 35px; border: 1px solid #ccc; border-radius: 5px;" placeholder="Ingresa tu contraseña" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block" style="width: 100%; padding: 10px; background-color: #007bff; border: none; border-radius: 5px; color: white; font-size: 16px;">
                <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
            </button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
